{
  "name": "bunli-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build --filter='./packages/*'",
    "typecheck": "turbo run typecheck --filter='./packages/*'",
    "clean": "bun scripts/clean.ts",
    "test": "bun test",
    "dev": "bun scripts/dev.ts",
    "release": "bun scripts/release.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "^2.5.4",
    "typescript": "^5.8.0"
  },
  "packageManager": "bun@1.2.2"
}
