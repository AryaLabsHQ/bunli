{
  "name": "@bunli/utils",
  "version": "0.3.3",
  "description": "Built-in utilities for Bunli CLI framework - prompts, spinners, and colors",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun scripts/build.ts && bun run tsc",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "bunli",
    "cli",
    "utilities",
    "prompts",
    "spinner",
    "terminal"
  ],
  "author": "Arya Labs, Inc.",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AryaLabsHQ/bunli.git",
    "directory": "packages/utils"
  },
  "bugs": {
    "url": "https://github.com/AryaLabsHQ/bunli/issues"
  },
  "homepage": "https://github.com/AryaLabsHQ/bunli#readme",
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "@standard-schema/spec": "^1.1.0",
    "@standard-schema/utils": "^0.3.0",
    "better-result": "^2.7.0"
  },
  "devDependencies": {
    "@types/bun": "1.3.7",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "bun": ">=1.3.7"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
