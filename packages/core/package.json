{
  "name": "@bunli/core",
  "version": "0.1.0",
  "type": "module",
  "description": "Minimal, type-safe CLI framework for Bun",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts"
    },
    "./plugin": {
      "types": "./dist/plugin/index.d.ts",
      "import": "./src/plugin/index.ts"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./src/utils/index.ts"
    },
    "./generated": {
      "types": "./dist/generated.d.ts",
      "import": "./src/generated.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "bun scripts/build.ts && bun run tsc",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "cli",
    "command-line",
    "bun",
    "typescript",
    "framework",
    "bunli",
    "type-safe"
  ],
  "author": "Arya Labs, Inc.",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AryaLabsHQ/bunli.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/AryaLabsHQ/bunli/issues"
  },
  "homepage": "https://github.com/AryaLabsHQ/bunli#readme",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.8.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@bunli/utils": "workspace:*",
    "@standard-schema/spec": "^1.0.0",
    "@standard-schema/utils": "^0.3.0",
    "zod": "^4.1.12"
  }
}
