{
  "name": "@{{name}}/cli",
  "version": "0.1.0",
  "type": "module",
  "description": "CLI for {{name}}",
  "author": "{{author}}",
  "license": "MIT",
  "bin": {
    "{{name}}": "./dist/index.js"
  },
  "scripts": {
    "postinstall": "bunli generate",
    "dev": "bun run src/index.ts",
    "build": "bunli build",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@bunli/core": "latest",
    "@{{name}}/core": "workspace:*",
    "@{{name}}/utils": "workspace:*"
  },
  "devDependencies": {
    "@bunli/test": "latest",
    "@types/bun": "latest",
    "bunli": "latest",
    "typescript": "^5.0.0"
  },
  "bunli": {
    "entry": "./src/index.ts",
    "outDir": "./dist",
    "external": ["@bunli/core", "@{{name}}/core", "@{{name}}/utils"]
  }
}