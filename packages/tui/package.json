{
  "name": "@bunli/tui",
  "version": "0.4.2",
  "description": "Terminal User Interface plugin for Bunli CLI framework",
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./register": {
      "types": "./dist/register.d.ts",
      "default": "./src/register.ts"
    },
    "./prompt": {
      "types": "./dist/prompt/index.d.ts",
      "default": "./src/prompt/index.ts"
    },
    "./inline": {
      "types": "./dist/inline/index.d.ts",
      "default": "./src/inline/index.ts"
    },
    "./interactive": {
      "types": "./dist/interactive/index.d.ts",
      "default": "./src/interactive/index.tsx"
    },
    "./charts": {
      "types": "./dist/charts/index.d.ts",
      "default": "./src/charts/index.tsx"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "default": "./src/runtime/index.ts"
    },
    "./utils/sync-batcher": {
      "types": "./dist/utils/sync-batcher.d.ts",
      "default": "./src/utils/sync-batcher.ts"
    }
  },
  "scripts": {
    "build": "bun run scripts/build.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentui/core": "^0.1.84",
    "@opentui/react": "^0.1.84",
    "@standard-schema/spec": "^1.1.0",
    "@standard-schema/utils": "^0.3.0"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@types/react": "19.2.10",
    "react": "^19.2.4",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@opentui/core": "^0.1.75",
    "react": "^19.2.4"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "bunli",
    "cli",
    "tui",
    "terminal",
    "ui",
    "interactive",
    "prompts"
  ],
  "author": "Bunli Contributors",
  "license": "MIT"
}
