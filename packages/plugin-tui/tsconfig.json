{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["bun-types"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitOverride": false,
    "strictNullChecks": false
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}